@using EPiServer.Core
@using PracticeSite.Models.ViewModels
@using PracticeSite.Models.Pages
@model ISitePageViewModel<SitePageData>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="@Model.CurrentPage.MetaDescription">
    <title>@Model.CurrentPage.MetaTitle</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand">Practice Site</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <!--output nav menu here-->
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>
                @if (Model.HomePage == null)
                {
                    <small>Warning! The home page has not been set for this Episerver web site.</small>
                }
                else
                {
                    if (!ContentReference.IsNullOrEmpty(Model.HomePage.Logo))
                    {
                        <img src="@Url.ContentUrl(Model.HomePage.Logo)" style="float:left;padding-right:10px;" />
                    }
                    @:<strong>Best bet: @Html.ContentLink(Model.HomePage.BestBet)</strong>, other favourites:
                    if (Model.HomePage.FavouritePagesMenu != null)
                    {
                        foreach (var item in Model.HomePage.FavouritePagesMenu)
                        {
                            @Html.ContentLink(item) @: |
                        }
                    }
                }
            </p>
            <p>&copy; @DateTime.Now.Year - Practice Episerver Site - <a href="mailto:@Model.HomePage.ContactEmail">E-mail Us</a></p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>